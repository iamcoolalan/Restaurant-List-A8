<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" value="{{ keyword }}"
            aria-label="Restaurant Name..." aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->

<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="row row-cols-sm-3">
        {{#each restaurants}}
        <div>
          <div class="card mb-3">
            <a href="/restaurants/{{ this._id }}">
              <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            </a>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{ this.category }}
              </div>

              <span class="badge rounded-pill bg-warning text-dark font-weight-normal">
                <i class="fas fa-star fa-xs">{{ this.rating }}</i>
              </span>
            </div>
            <div class="card-body d-flex justify-content-end">
              <a href="/restaurants/{{ this._id }}" class="text-secondary mx-1">detail</a>
              <a href="/restaurants/{{ this._id }}/edit" class="text-secondary mx-1">edit</a>
              <a href="/restaurants/{{ this._id }}/delete" class="text-secondary ms-1 delete">delete</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script>
  //let 'a' marker's http method become 'POST'
  const deleteLinks = document.querySelectorAll('.delete')

  deleteLinks.forEach(function (del) {
    del.addEventListener('click', function (event) {
      event.preventDefault()

      const url = event.target.href
      //before delete data make sure user really want to do it
      const confirmed = confirm('Are you sure you want to delete this?')

      if(confirmed){
        fetch(url, {
          method: 'POST'
        })
        .then(response => {
          if (response.ok) {
            window.location.href = '/'
          } else {
            throw new Error('Something went wrong')
          }
        })
        .catch(error => console.log(error))
      }
    })
  })  
</script>